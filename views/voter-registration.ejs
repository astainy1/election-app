<%- include("_regheader") -%>

                    <h2 class="title text-center fw-smbold">Voter Registration</h2>
                    <form action="/" method="POST"id="form">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">First Name</label>
                                    <input class="input--style-4" type="text" name="fName" id="first_name">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Middle Name</label>
                                    <input class="input--style-4" type="text" name="mName" id="middle_name">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Last Name</label>
                                    <input class="input--style-4" type="text" name="lName" id="last_name">
                                </div>
                            </div>
                            <div class="col-2">
                              <div class="input-group">
                                  <label class="label">Birthday</label>
                                  <div class="input-group-icon">
                                      <input type="text" class="input--style-4 js-datepicker"  name="dob" id="birthday">
                                      <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                  </div>
                              </div>
                          </div>
                        </div>
                        <div class="row row-space">
                          <div class="col-2">
                              <div class="input-group">
                                  <label class="label">Username</label>
                                  <input class="input--style-4" type="text" name="username" placeholder="astainy_1" id="username">
                              </div>
                          </div>
                          <div class="col-2">
                              <div class="input-group">
                                  <label class="label">Password</label>
                                  <input class="input--style-4" type="password" name="password" placeholder="********" id="password">
                              </div>
                          </div>
                      </div>
                        <div class="row row-space">
                            <div class="col-2">
                              <div class="input-group">
                                <label for="formFile" class="form-label text-left">upload image</label>
                                 <input class="form-control" type="file" name="photo" id="formFile" class="profile">
                              </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <select class="form-select" aria-label="Default select ">
                                        <option class="border border-secondary" selected>Select role</option>
                                        <% for(const userRole of model) {%>
                                        <option value="1"><%= userRole.role %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class=" input-group">
                                  <button class="btn btn--radius-2 btn--blue submit" type="submit" id="submit">Submit</button>
                                </div>
                              </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                              <hr class="mt-5 mb-4 border-secondary-subtle">
                              <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                <strong>Already Have Account? </strong><a href="/" class="link-secondary text-decoration-none">Login</a>
                              </div>
                            </div>
                        </div>
                    </form>
<%- include("_regfooter") -%>