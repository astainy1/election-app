<%- include("./extended-files/_admin-dashboard-header.ejs") -%>

<body class="hold-transition register-page" >
  <div class=" d-sm-inline-block col-xl-12 col-md-12 col-sm-12 d-xl-flex justify-content-around align-items-start mb-4 ">
    <!-- <div class="register-logo">
      <a href="/register"><b>Voting</b> System</a>
    </div> -->
  
    <div class="card-container card my-5">
      <div class="card-body register-card-body col-12">

            <h3 class="text-center"><b>Party</b> Registration</h3>

        <form action="/party" method="post" role="form" id="registrationForm" enctype="multipart/form-data">
            <!-- /.card-body -->
            <div class="card-body">
              <div class="form-group">
                <label for="first-name">Party Name</label>
                <input type="text" name="partyName" class="form-control" id="party-name" placeholder="Enter Party Name" required aria-required="true">
              </div>

              <div class="form-group">
                <label for="file">Party Logo</label>
                <div class="input-group">
                  <div class="custom-file">
                    <input type="file" name="logo" class="custom-file-input inputPartyLogo"  id="partyFile" required aria-required="true">
                    <label class="custom-file-label partyLogoName" for="file">Choose Logo</label>
                  </div>
                </div>
              </div>

              <div class=" input-group">
                <button class="btn btn-radius-2 btn-success submit btn-block swalDefaultSuccess " type="submit" id="submit">Submit</button>
              </div>
            </div>

            <!-- Form elements end! -->

        </form>
      </div>
      <!-- /.form-box -->
    </div>
    <!-- /.card -->
     <!-- DataTales Example -->
    <div class="card shadow">
      <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Parties Data Table</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                  <th>Logo</th>
                  <th>Party Name</th>
                  <!-- <th>Standard-bearer</th> -->
                  <th>Action</th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <th>Logo</th>
                <th>Party Name</th>
                <th>Standard Barear</th>
                <th>Action</th>
              </tr>
            </tfoot>
              <tbody>
                
                <% parties.forEach( (partyDetails) => { %>
                <tr>
                  <td><img src="<%= partyDetails.logo ? '/' + partyDetails.logo : './uploads/pngegg.png' %>" class=" img-fluid rounded-circle img-thumbnail" alt="voter picture" style="max-width: 50px; max-height: 50px; object-fit: cover;"></td>
                  <td><%= partyDetails.party %></td>
                  <!-- <td>Christian A. Harris</td> -->
                  <td>
                      <button type="button" class="btn btn-success">Edit</button>
                      <button type="button" class="btn btn-danger">Delete</button>
                  </td>
                </tr>
                <% }) %>
            
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <div class="mb-5 pb-5"></div>
    <div class="mb-5 pb-5"></div>
    <div class="mb-5 pb-5"></div>
    <div class="mb-5 pb-5"></div>
    <div class="mb-3 pb-3"></div>
