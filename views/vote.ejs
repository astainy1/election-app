<%- include("./extended-files/_voter-dashboard-header.ejs") -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class=" row  d-sm-flex align-items-center justify-content-between mb-4 text-center">
                        <h1 class=" col-12 h2 ml-4 mb-1 font-weight-bolder text-gray-900 text-uppercase text-center"><%= message %></h1>
                    </div>

                    <!-- Content Row -->
                    <div class="row justify-content-center align-items-center">

                        <!-- Total Votes -->
                        <div class="col-xl-6 col-md-6 mb-4 px-xl-5">
                            <div class="card border-bottom-warning shadow h-100 px-2">
                                <div class="card-body p-5 ">
                                    <h4 class="h5 col-sm-h6 mt-3 text-center">Vote Status</h4>
                                    <div class="row no-gutters p-xl-3 d-flex">
                                        <div class="col mr-2 d-flex justify-content-center align-items-center">
                                            <div class="col-auto mr-3">
                                                <i class="fa-solid fa-check-to-slot fa-3x text-gray-300">â€Œ</i>
                                            </div>
                                            <div class=" text-xs font-weight-bold text-dark text-uppercase mb-1">
                                                <h5 class="font-weight-bold h4">You have not vote yet</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    
                    <!-- Candidates -->

                     <!-- Page Heading -->
                    <div class=" row d-sm-flex align-items-center justify-content-between mb-4 text-center">
                        <h1 class="col-3 h2 ml-4 mb-1 font-weight-bolder text-gray-900 text-uppercase text-center "> Candidates</h1>
                    </div>
                    <div class=" row d-sm-flex align-items-center justify-content-center mb-4 text-center ">
            
                        <% contestant.forEach( (candidate) => { %>
                            <!-- Cards start -->
                            <form action="/vote" method="post" class="shadow col-xl-2 col-md-6 card m-2 shadow col-xl-2 col-md-6 mb-4 ml-1">
                                <div class="" >
                                    <div class="card-body">
                                        <div class="row no-gutters d-flex justify-content-between align-items-center">
                                            <div class="col-auto">
                                                <img src="<%= candidate.photo ? '/' + candidate.photo : './uploads/contestants/default-president.png' %>" alt="<%= candidate.fname %> <%= candidate.lname %> photo" style="max-width: 100px; max-height: 100px; object-fit: cover;" class="img-profile img-fluid rounded-1 img-thumbnail">
                                            </div>
                                            <div class="">
                                                <p class="h5"><%= candidate.party_id %></p>
                                            </div>
                                        </div>
                                        <h6 class="card-subtitle my-2 text-body-secondary"><%= candidate.fname%> <%= candidate.mname%> <%= candidate.lname%></h6>
                                        <span class="text-center"><%= candidate.position_id %></span>
                                        <hr>
                                        <div class="form-check d-flex justify-content-between align-items-center">
                                            <div class="d-block p-0 mb-4">
                                                <input name="Candidates_id" class="form-check-input" type="radio" value="" id="flexCheckDefault" style="scale: 1.5;">
                                            </div>
                                            <button class="btn btn-success col-9 d-block" type="submit">
                                                <label class="form-check-label" for="flexCheckDefault">
                                                    Vote
                                                </label>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- Cards end! -->
                        <% }) %>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

           

 <%- include("./extended-files/_dashboard-footer.ejs") -%>