              <!-- Begin Page Content -->
              <div class="container-fluid">
                  <div class="d-sm-flex align-items-center justify-content-between mb-4">
                      <h1 class="h3 mb-2 text-gray-800 font-weight-light-bold p-3 my-4 display-4">Contestants Table</h1>
                      <div>
                          <button type="button" class=" d-sm-inline-block btn btn-sm shadow-sm px-5 py-2 mr-4 btn-success" data-toggle="modal" data-target="#contestantModal">
                            <i class="fas fa-user-plus fa-sm "> </i> &nbsp; Add Contestant 
                          </button>
                          <a href="#" class="d-none d-sm-inline-block btn btn-sm shadow-sm px-5 py-2 mr-4 btn-success" onclick="alert('unable to print document for now. Please contact system develper.');">
                            <i class="fas fa-download fa-sm "></i> Print 
                          </a>
  
                      </div>
                  </div>
                  
                  <p class="mb-4"> This is the contestant table where all registered contestants information are displayed, it and can be printed out for verification.</p>

                  <!-- DataTales Example -->
                  <div class="card shadow mb-4">
                      <div class="card-header py-3">
                          <h6 class="m-0 font-weight-bold text-gray-800">Contestant Data Table</h6>
                      </div>
                      <div class="card-body">
                          <div class="table-responsive">
                              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                  <thead>
                                      <tr>
                                        <th>Photo</th>
                                        <th>First Name</th>
                                        <th>Middle Name</th>
                                        <th>Last Name</th>
                                        <th>Username</th>
                                        <th>Party</th>
                                        <th>Position</th>
                                        <th>Action</th>
                                      </tr>
                                  </thead>
                                  <tfoot>
                                      <tr>
                                          <th>Photo</th>
                                          <th>First Name</th>
                                          <th>Middle Name</th>
                                          <th>Last Name</th>
                                          <th>Username</th>
                                          <th>Party</th>
                                          <th>Position</th>
                                          <th>Action</th>
                                      </tr>
                                  </tfoot>
                                  <tbody>
                                    <% allCandidate.forEach( (candidate) => {%>
                                      <tr>
                                          <td><img src="<%= candidate.photo ? '/' + candidate.photo : './uploads/contestants/default-president.png' %>" class=" img-fluid img-thumbnail" alt="voter picture" style="max-width: 50px; max-height: 50px; object-fit: cover;"></td>
                                          <td><%= candidate.fname %></td>
                                          <td><%= candidate.mname %></td>
                                          <td><%= candidate.lname %></td>
                                          <td><%= candidate.username %></td>
                                          <td><%= candidate.party_id %></td>
                                          <td><%= candidate.position_id %></td>
                                          <td>
                                             <!-- Edit Button -->
                                             <form action="/edit-candidate/<%= candidate.id %>" method="GET" style="display:inline;">
                                                <button type="submit" class="btn btn-success">Edit</button>
                                            </form>
                                        
                                            <!-- Delete Button -->
                                            <form action="/delete-candidate/<%= candidate.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this candidate?');" style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                          </td>
                                      </tr>
                                    <% }) %>
                                  </tbody>
                              </table>
                          </div>
                      </div>
                  </div>

              </div>
              <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->

 
