                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-2 text-gray-800 font-weight-light-bold p-3 my-4 display-4">Voters Table</h1>
                        <div>
                            <button type="button" class=" d-sm-inline-block btn btn-sm shadow-sm px-5 py-2 mr-4 btn-success" data-toggle="modal" data-target="#addVoterModal"><i
                                    class="fas fa-user-plus fa-sm "> </i> &nbsp; Register New Voter 
                            </button>
                            <a href="#" class="d-none d-sm-inline-block btn btn-sm shadow-sm px-5 py-2 mr-4 btn-success"><i
                                    class="fas fa-download fa-sm "></i> Print 
                            </a>
    
                        </div>
                    </div>
                    
                    <p class="mb-4"> This is the voters table where all qualified voters information are displayed, it and can be printed out for verification.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-gray-800">Voters Data Table</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Photo</th>
                                            <th>First Name</th>
                                            <th>Middle Name</th>
                                            <th>Last Name</th>
                                            <th>Username</th>
                                            <th>Date of Birth</th>
                                            <th>Age</th>
                                            <th>Vote Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Photo</th>
                                            <th>First Name</th>
                                            <th>Middle Name</th>
                                            <th>Last Name</th>
                                            <th>Username</th>
                                            <th>Date of Birth</th>
                                            <th>Age</th>
                                            <th>Vote Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% totalVoterList.forEach( (voter) => { %>
                                        <tr>
                                            <td><img src="<%= voter.photo ? '/' + voter.photo : './uploads/pngegg.png' %>" class=" img-fluid img-thumbnail" alt="voter picture" style="max-width: 50px; max-height: 50px; object-fit: cover;"></td>
                                            <td><%= voter.fname %></td>
                                            <td><%= voter.mname %></td>
                                            <td><%= voter.lname %></td>
                                            <td><%= voter.username %></td>
                                            <td><%= voter.dob %></td>
                                            <!-- Calculate voter age -->
                                            <% let currentDate = new Date(); %>
                                            <% let currentYear = currentDate.getFullYear(); %>
                                            <% let currentDOB = voter.dob; %>
                                            <% let splitDOB = currentDOB.split('-'); %>
                                            <% voterCurrentAge = currentYear -splitDOB[0] %>

                                            <td><%= voterCurrentAge %></td>

                                            <% if(voter.voted === 'Has Voted') { %>
                                            <td class="text-success"> <%= voter.voted %> <i class="fas fa-check-circle"></i></td>
                                            <% } else { %>
                                            <td class="text-danger"> <%= voter.voted %> <i class="fas fa-times-circle"></i></td>
                                            <% } %>
                                            <td>
                                                <td>
                                                    <!-- Edit Button -->
                                                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#editVoterModal<%= voter.id %>">
                                                        Edit
                                                    </button>
                                                
                                                    <!-- Delete Button -->
                                                    <form action="/delete-voter/<%= voter.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this candidate?');" style="display:inline;">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </td>
                                                
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

           
